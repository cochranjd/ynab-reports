    <a href="#" {{action "previousMonth"}}>{{config.previousBudgetMonthName}}</a>
    <a href="#">{{config.budgetMonthName}}</a>
    <a href="#" {{action "nextMonth"}}>{{config.nextBudgetMonthName}}</a>
